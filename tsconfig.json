{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "strict": true,
  },
  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}